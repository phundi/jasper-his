
<div class="panel panel-primary">
    <div class="panel-heading ">
      <span class="glyphicon glyphicon-eye-open"></span>
      <b>Enter Viral Load Test Results</b>
      <div class="panel-btn" style="padding: 8px;">
            &nbsp;
      </div>

      <div class="pull-right" style="padding: 7px;font-style: italic; border: 1px solid #d3d3d3; border-left: 2px solid #2e6da4; ">
        &nbsp;<%= "#{@client.name} (#{@client.sex}, #{@client.age})" %>
      </div>
    </div>
    <div class="panel-body">
      <div class="container-fluid">
        <div class="row data-entry">

            <div class="col-md-10 " style="padding: 0px;margin-left: 6%; min-height: 250px;">
                <div class="col-md-12" style="border: 1px dotted lightsteelblue; margin: 10px;padding: 10px;">

                  <form action="/create/<%= @client.id%>" method="POST">

                    <%= hidden_field_tag "module", "ART"%>
                    <%= hidden_field_tag "encounter_type", "Viral Load"%>

                    <div class="form-group col-md-12">
                        <label class="control-label col-md-4">VL Specimen Type </label>

                        <div class="col-md-8">
                          <select id="vl_type" data-placeholder="Select Specimen Type"
                                  class="form-control" name="obs[Specimen Type][value_text]">
                                                                  <option></option>
                            <% (@specimen_types || []).each do |r| %>
                                <option value="<%= r%>"><%= r %></option>
                            <% end %>
                          </select>
                        </div>
                      </div>
                      
                 <div class="form-group col-md-12">
                        <label class="control-label col-md-4">VL Test Result    <i>(Copies/ml)</i> </label>

                        <div class="col-md-8">
                          <input id="vl_result" data-placeholder="Enter VL Result"
                                  class="form-control" name="obs[VL result (Copies/ML)][value_text]" />                                                                
                         
                        </div>
                      </div>

                    <div class="actions-row col-md-12" style="padding-right: 10%;">
                      <button type="button"
                              onclick="window.location='<%= "/client/view?client_id=#{params[:client_id]}" %>'"
                              class="btn btn-danger pull-left"><span class="glyphicon glyphicon-cancel"></span> Cancel </button>
                      <button type="button submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Save </button>
                    </div>
                  </form>
                </div>
            </div>
        </div>

        <script>
            $(document).ready(function() {
                $('select').select2({
                    theme: "classic"
                });
            });
        </script>
        <%= render :partial => "encounter/patient_trail"%>

      </div>
    </div>
</div>

